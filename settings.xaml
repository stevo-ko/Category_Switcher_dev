<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="stevo_ko Category Switcher"
        Width="650"
        Height="700"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <!-- Main Gradient Resource -->
        <LinearGradientBrush x:Key="MainGradient"
                            StartPoint="0,1"
                            EndPoint="1,0">
            <GradientStop Offset="0.0" Color="#2C5364" />   <!-- Heller Einstieg -->
            <GradientStop Offset="0.2" Color="#24444F" />
            <GradientStop Offset="0.4" Color="#1D363F" />
            <GradientStop Offset="0.6" Color="#16292F" />
            <GradientStop Offset="0.75" Color="#111D23" />
            <GradientStop Offset="0.9" Color="#0B1317" />
            <GradientStop Offset="1.0" Color="#080F13" />   <!-- Sehr dunkel -->
        </LinearGradientBrush>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle"
            TargetType="ToggleButton">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <!-- Track -->
                            <Border x:Name="Track"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    Background="#3C5A6B"  
                                    CornerRadius="12" />
                            <!-- Knob mit Transform -->
                            <Ellipse x:Name="Knob"
                                    Width="20"
                                    Height="20"
                                    Fill="#28AEED"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="2">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="KnobTransform" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" Value="#00FFFF" />  <!-- leicht grünlich, heller -->
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Aktivierter Zustand: Nur Background an Track ändern -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Knob" Property="Fill" Value="#02c331" />
                                <Setter TargetName="Track"
                                        Property="Background">
                                    <Setter.Value>
                                        <!-- Verlauf an MainGradient angelehnt, aber für Track -->
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3C5A6B" Offset="0.0" />
                                            <GradientStop Color="#026D1D" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                                            Storyboard.TargetProperty="X"
                                                            To="24"
                                                            Duration="0:0:0.2"
                                                            AccelerationRatio="0.3"
                                                            DecelerationRatio="0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                                            Storyboard.TargetProperty="X"
                                                            To="0"
                                                            Duration="0:0:0.2"
                                                            AccelerationRatio="0.3"
                                                            DecelerationRatio="0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Hover-Effekt (nur Knob) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Knob" Property="Fill" Value="#00FFFF" />
                            </Trigger>

                            <!-- Klick-Effekt (Knob) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Knob" Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Translucent ScrollBar Style -->
        <Style x:Key="TranslucentScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="10" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" Background="#502C5364"> <!-- Transparenter dunklerer Hintergrund passend zum MainGradient -->
                            <Track x:Name="PART_Track"
                                IsDirectionReversed="true"
                                Maximum="{TemplateBinding Maximum}"
                                Minimum="{TemplateBinding Minimum}"
                                Orientation="Horizontal"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                Value="{TemplateBinding Value}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Opacity="0.8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#8A16C1" CornerRadius="4" SnapsToDevicePixels="True" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Opacity" Value="1.0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- No Arrows Scrollbar Template -->
        <Style x:Key="NoArrowsScrollBar" TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" Background="Transparent"> <!-- Transparenter dunklerer Hintergrund -->
                            <Track x:Name="PART_Track"
                                IsDirectionReversed="true"
                                Maximum="{TemplateBinding Maximum}"
                                Minimum="{TemplateBinding Minimum}"
                                Orientation="Vertical"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                Value="{TemplateBinding Value}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Opacity="0.8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#00FFFF" CornerRadius="4" SnapsToDevicePixels="True" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Opacity" Value="1.0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NoArrowsHorizontalScrollBar" TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track"
                                IsDirectionReversed="False"
                                Maximum="{TemplateBinding Maximum}"
                                Minimum="{TemplateBinding Minimum}"
                                Orientation="Horizontal"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                Value="{TemplateBinding Value}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Opacity="0.8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#00FFFF" CornerRadius="4" SnapsToDevicePixels="True" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Opacity" Value="1.0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollViewer Template -->
        <Style x:Key="CustomScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Content -->
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                    Grid.Column="0" Grid.Row="0"
                                                    Margin="0" />

                            <!-- Vertical ScrollBar -->
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                    Grid.Column="1" Grid.Row="0"
                                    Orientation="Vertical"
                                    Maximum="{TemplateBinding ScrollableHeight}"
                                    Value="{TemplateBinding VerticalOffset}"
                                    ViewportSize="{TemplateBinding ViewportHeight}"
                                    Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                    LargeChange="{TemplateBinding ViewportHeight}"
                                    SmallChange="1"
                                    Style="{StaticResource NoArrowsScrollBar}" />

                            <!-- Horizontal ScrollBar -->
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                    Grid.Column="0" Grid.Row="1"
                                    Orientation="Horizontal"
                                    Maximum="{TemplateBinding ScrollableWidth}"
                                    Value="{TemplateBinding HorizontalOffset}"
                                    ViewportSize="{TemplateBinding ViewportWidth}"
                                    Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                    LargeChange="{TemplateBinding ViewportWidth}"
                                    SmallChange="1"
                                    Style="{StaticResource NoArrowsHorizontalScrollBar}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Styled Separator -->
        <Style x:Key="StyledSeparator" TargetType="Separator">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Padding="5" Background="Transparent">
                            <Rectangle Height="2" Fill="#24444F" RadiusX="1" RadiusY="1" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styled Separator -->
        <Style x:Key="StyledMainSeparatorGray" TargetType="Separator">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Padding="5" Background="Transparent">
                            <Rectangle Height="4" Fill="#5C6E74" RadiusX="4" RadiusY="4" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styled Main Separator mit 3D-Effekt -->
        <Style x:Key="StyledMainSeparator" TargetType="Separator">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Padding="5" Background="Transparent">
                            <Border Height="5" CornerRadius="2.5"
                                    BorderThickness="1,1,1,1"
                                    BorderBrush="#132327" 
                                    Background="#3A6372">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <!-- oben heller -->
                                        <GradientStop Color="#5B8A9D" Offset="0" />
                                        <!-- Mitte normal -->
                                        <GradientStop Color="#3A6372" Offset="0.5" />
                                        <!-- unten dunkler -->
                                        <GradientStop Color="#132327" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.Effect>
                                    <DropShadowEffect Color="#132327" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyledMainSeparatorfade" TargetType="Separator">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Rectangle Height="3">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#24444F" Offset="0.5"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#F0FFF4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Background" Value="#2F855A"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid SnapsToDevicePixels="True" x:Name="grid" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>                            
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    >
                                <Border.Effect>
                                    <DropShadowEffect x:Name="Shadow" Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="4"/>
                                </Border.Effect>
                            </Border>

                            <!-- Inhalt -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}">
                                <TextBlock Text="➕"
                                        FontSize="14"
                                        Margin="0,0,4,0"
                                        SnapsToDevicePixels="True"
                                        TextOptions.TextFormattingMode="Display"
                                        TextOptions.TextRenderingMode="ClearType"/>
                                <ContentPresenter VerticalAlignment="Center"
                                                SnapsToDevicePixels="True"
                                                TextOptions.TextFormattingMode="Display"
                                                TextOptions.TextRenderingMode="ClearType"/>
                            </StackPanel>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- MouseOver -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#38A169" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#2F855A" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressed wie bei AbortButton -->
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Hintergrund dunkler -->
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#276749" Duration="0:0:0.05"/>
                                            <!-- Schatten kleiner -->
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.1" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="BlurRadius"
                                                            To="2" Duration="0:0:0.05"/>
                                            <!-- Button leicht skalieren -->
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                            To="0.97" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                            To="0.97" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Hintergrund zurück -->
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#2F855A" Duration="0:0:0.1" FillBehavior="Stop"/>
                                            <!-- Schatten zurück -->
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.2" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="BlurRadius"
                                                            To="4" Duration="0:0:0.1"/>
                                            <!-- Skalierung zurück -->
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                            To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                            To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#80FFFFFF"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Background" Value="#C53030"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid SnapsToDevicePixels="True" x:Name="grid" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>  
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect x:Name="Shadow" Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="4"/>
                                </Border.Effect>
                            </Border>

                            <!-- Icon + Content nebeneinander -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}">
                                <!-- Papierkorb-Icon -->
                                <Viewbox Width="20" Height="20" Margin="0,0,6,0">
                                    <Canvas Width="24" Height="24"> 
                                        <!-- Deckel -->
                                        <Path Fill="{TemplateBinding Foreground}" Data="M8,4 L10,4 L10,2 L14,2 L14,4 L16,4 L16,6 L8,6 L8,4 Z"/>
                                        <!-- Körper -->
                                        <Path Fill="{TemplateBinding Foreground}" Data="M3,6 L5,6 L21,6 L21,8 L19.7,20.3 C19.6,21.2 18.9,22 18,22 L6,22 C5.1,22 4.4,21.2 4.3,20.3 L3,8 L3,6 Z M7,20 L17,20 L18.3,8 L5.7,8 L7,20 Z"/>
                                        <!-- Innenlinien -->
                                        <Path Stroke="{TemplateBinding Foreground}" StrokeThickness="0.8" Data="M9,10 L11,10 L11,18 L9,18 L9,10 Z" Fill="Transparent"/>
                                        <Path Stroke="{TemplateBinding Foreground}" StrokeThickness="0.8" Data="M13,10 L15,10 L15,18 L13,18 L13,10 Z" Fill="Transparent"/>
                                    </Canvas>
                                </Viewbox>

                                <!-- Content -->
                                <ContentPresenter
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    RecognizesAccessKey="True"
                                    VerticalAlignment="Center"
                                    Margin="0"
                                    SnapsToDevicePixels="True"
                                    TextOptions.TextFormattingMode="Display"
                                    TextOptions.TextRenderingMode="ClearType"/>        
                            </StackPanel>
                        </Grid>

                        <!-- Trigger -->
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#E53E3E" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#C53030" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Hintergrund dunkler -->
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#9B2C2C" Duration="0:0:0.05"/>
                                            <!-- Schatten etwas ändern -->
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.1" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="BlurRadius"
                                                            To="2" Duration="0:0:0.05"/>
                                            <!-- Button leicht skalieren -->
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                            To="0.97" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                            To="0.97" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Hintergrund zurück -->
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#C53030" Duration="0:0:0.1" FillBehavior="Stop"/>
                                            <!-- Schatten zurück -->
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="0.2" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="Shadow"
                                                            Storyboard.TargetProperty="BlurRadius"
                                                            To="4" Duration="0:0:0.1"/>
                                            <!-- Skalierung zurück -->
                                            <DoubleAnimation Storyboard.TargetName="grid"
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                            To="1" Duration="0:0:0.1"/>
