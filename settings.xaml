                ClipToBounds="False"
                PopupAnimation="Fade"> 

                <!-- Äußerer Border: Schatten, Rahmen, CornerRadius -->
                <Border BorderBrush="{StaticResource CyanBlueGradient}"
                        BorderThickness="2"
                        CornerRadius="40"
                        SnapsToDevicePixels="True"
                        Background="{StaticResource MainGradient}"
                        Padding="20"
                        ClipToBounds="False">
                        
                    <Grid ClipToBounds="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />         <!-- Überschrift -->
                            <RowDefinition Height="*" />            <!-- TreeViews -->
                            <RowDefinition Height="Auto" />         <!-- Buttons -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0"
                            x:Name="AddFolderPathDragArea"
                            Cursor="Hand"
                            Background="Transparent"
                            Tag="{Binding ElementName=AddFolderPathPopup}"
                            ClipToBounds="False">
                            
                            <Grid ClipToBounds="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="10"/> 
                                    
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Grid.Row="0"
                                            ClipToBounds="False">
                                    <TextBlock Text="{Binding [GameRootFolder_Popup.Label], Mode=OneWay}"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Margin="0,-30,5,0" 
                                            ClipToBounds="False"/>
                                    <Image Margin="4,-35,0,0"
                                        Tag="_internal/Assets/folder.png"
                                        Source="https://img.icons8.com/3d-fluency/1500/folder-invoices--v2.png"
                                        Width="33" Height="33" ClipToBounds="False" />
                                </StackPanel>

                                <Border Grid.Row="1"
                                        Height="1"
                                        Background="#66FFFFFF"
                                        Margin="0,0,0,0"
                                        ClipToBounds="False" /> <!-- oben statt unten -->
                            </Grid>
                        </Grid>
                        <!-- Grid für TreeViews -->
                        <Grid Grid.Row="1" Margin="0,5,0,10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition MinWidth="100" Width="2*" />
                            </Grid.ColumnDefinitions>

                        <!-- TreeViews -->
                            <!-- DriveTreeView mit eigenem ScrollViewer -->
                            <ScrollViewer x:Name="DriveTreeViewPathScrollViewer"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    MaxHeight="300"
                                    Style="{StaticResource CustomScrollViewerStyle}"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    Focusable="True">

                                <!-- DriveTreeView -->
                                <TreeView x:Name="DriveTreeViewPath"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        MaxWidth= "500"
                                        FontSize="14"
                                        HorizontalAlignment="Left">
                                    <TreeView.ItemContainerStyle>
                                        <Style TargetType="TreeViewItem">
                                            <Setter Property="Foreground" Value="White" />
                                        </Style>
                                    </TreeView.ItemContainerStyle>
                                </TreeView>
                            </ScrollViewer>
                            <!-- FolderTreeView mit eigenem ScrollViewer -->
                            <ScrollViewer x:Name="FolderTreeViewPathScrollViewer"
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        MaxHeight="300"
                                        MaxWidth="500"
                                        Padding="5" 
                                        Style="{StaticResource CustomScrollViewerStyle}"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        Focusable="True">
                                <!-- FolderTreeView -->
                                <TreeView x:Name="FolderTreeViewPath"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Margin="0,0,10,0"
                                        >
                                    <TreeView.ItemContainerStyle>
                                        <Style TargetType="TreeViewItem">
                                            <Setter Property="Foreground" Value="White" />
                                        </Style>
                                    </TreeView.ItemContainerStyle>
                                </TreeView>
                            </ScrollViewer>
                        </Grid>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Grid.Row="2"
                                    Margin="0,5,0,0">
                            <!-- Double Button Grid -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnConfirmAddFolderPath"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"
                                        Foreground="White"
                                        Margin="0,0,3,0"
                                        Style="{StaticResource AddFolderButtonStyle}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Margin="4,0,0,0" Tag="_internal/Assets/folder.png" Source="https://img.icons8.com/3d-fluency/1500/folder-invoices--v2.png"
                                            Width="30" Height="30"  />
                                        <TextBlock Text="{Binding [Buttons.GameRootFolder], Mode=OneWay}" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold" Margin="4,0,4,0" />
                                    </StackPanel> 
                                </Button>
                                <Button x:Name="btnCancelAddFolderPath"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"
                                        Foreground="White"
                                        Style="{StaticResource AbortButtonStyle}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Margin="-4,0,0,0" Tag="_internal/Assets/cancel.png" Source="https://img.icons8.com/?size=100&amp;id=fYgQxDaH069W&amp;format=png&amp;color=000000"
                                            Width="45" Height="45" />
                                        <TextBlock Text="{Binding [Buttons.Abort], Mode=OneWay}" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold" Margin="-8,0,10,0" />
                                    </StackPanel>        
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>

            <Popup x:Name="SavePopup"
                StaysOpen="True"
                IsOpen="False"
                Placement="Relative"
                PlacementTarget="{Binding ElementName=Window}"
                VerticalOffset="170"
                HorizontalOffset="150"
                Width="Auto"
                MinWidth="300"
                MaxWidth="800"
                MaxHeight="800"
                Panel.ZIndex="10"
                AllowsTransparency="True"
                
                PopupAnimation="Fade">

                <!-- Äußerer Border: Schatten, Rahmen, CornerRadius -->
                <Border BorderBrush="{StaticResource CyanBlueGradient}"
                        BorderThickness="2"
                        CornerRadius="40"
                        SnapsToDevicePixels="True"
                        Background="{StaticResource MainGradient}"
                        Padding="20"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />     <!-- Überschrift -->
                            <RowDefinition Height="*" />        <!-- Änderungen -->
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />     <!-- Buttons -->
                        </Grid.RowDefinitions>

                        <!-- Überschrift -->
                        <Grid Grid.Row="0" x:Name="SavePopupDragArea" Tag="{Binding ElementName=SavePopup}" Cursor="Hand" Background="Transparent">
                            
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/> <!-- war vorher 1 -->    
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" > 
                                    <Image Margin="0,-5,15,0"
                                        Source="https://img.icons8.com/color/100/save-as.png"
                                        Tag="_internal/Assets/savepop.png"
                                        Width="40" Height="40" />
                                    <TextBlock Text="{Binding [Save_Popup.Label], Mode=OneWay}"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Margin="0,0,0,6"
                                         />
                                    <Image Margin="15,-5,0,0"
                                        Source="https://img.icons8.com/color/100/save-as.png"
                                        Tag="_internal/Assets/savepop.png"
                                        Width="40" Height="40" />

                                </StackPanel>
                                <Border Grid.Row="1"
                                        Height="1"
                                        Background="#66FFFFFF"
                                        Margin="0,0,0,10" />                                
                            
                        </Grid>

                        <!-- Änderungen -->
                        <Grid Grid.Row="1">
                            <TextBlock Text="{Binding [Save_Popup.Description], Mode=OneWay}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,10" />
                        </Grid>
                        <Grid Grid.Row="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                                    
                            <ScrollViewer Grid.Column="0"
                                        MaxHeight="300" 
                                        VerticalScrollBarVisibility="Auto" 
                                        Padding="0,0,10,0"                                                                             
                                        Background="Transparent"
                                        Focusable="False"
                                        IsEnabled="True"
                                        Style="{StaticResource CustomScrollViewerStyle}"
                                        >
                                <StackPanel x:Name="ItemsToSave" Margin="0,0,0,10" />
                            </ScrollViewer>
                        
                        <!-- Icon rechts -->
                        <Image 
                            Grid.Column="1"
                            Width="70"
                            Height="70"
                            Margin="10,0,20,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Stretch="Uniform"
                            Tag="_internal/Assets/warning.png"
                            Source="https://img.icons8.com/?size=100&amp;id=KarJz0n4bZSj&amp;format=png&amp;color=000000" />
                        </Grid>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnConfirmSave"
                                        Grid.Column="0"
                                        BorderThickness="0"                                        
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"                                        
                                        Foreground="White"
                                        Margin="0,0,5,0"
                                        
                                        Style="{StaticResource YesButtonStyle}">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Image Tag="_internal/Assets/checkmark.png"
                                            Source="https://img.icons8.com/fluency/48/ok--v1.png"
                                            Width="45" Height="45"
                                            Margin="-8,0,0,0" />
                                        <TextBlock Text="{Binding [Buttons.Yes], Mode=OneWay}"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                
                                                Margin="-4,0,10,0"/>
                                    </StackPanel> 
                                </Button>

                                <Button x:Name="btnAbortSave"
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"                                        
                                        Foreground="White"                                        
                                        Style="{StaticResource NoButtonStyle}">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Image Tag="_internal/Assets/cancel.png"
                                            Source="https://img.icons8.com/?size=100&amp;id=fYgQxDaH069W&amp;format=png&amp;color=000000"
                                            Width="45" Height="45"
                                            Margin="-8,0,0,0" />
                                        <TextBlock Text="{Binding [Buttons.No], Mode=OneWay}"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                MinWidth="25"
                                                Margin="-8,0,10,0"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>


            <Popup x:Name="WarningPopup"
                StaysOpen="True"
                IsOpen="False"
                Placement="Relative"
                PlacementTarget="{Binding ElementName=AddFolderPathPopup}"
                VerticalOffset="170"
                HorizontalOffset="150"
                Width="Auto"
                MinWidth="300"
                MaxWidth="800"
                MaxHeight="600"
                Panel.ZIndex="10"
                AllowsTransparency="True"
                PopupAnimation="Fade">

                <!-- Äußerer Border: Schatten, Rahmen, CornerRadius -->
                <Border BorderBrush="{StaticResource CyanBlueGradient}"
                        BorderThickness="2"
                        CornerRadius="40"
                        SnapsToDevicePixels="True"
                        Background="{StaticResource MainGradient}"
                        Padding="20"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />     <!-- Überschrift -->
                            <RowDefinition Height="*" />        <!-- Änderungen -->
                            <RowDefinition Height="Auto" />     <!-- Buttons -->
                        </Grid.RowDefinitions>

                        <!-- Überschrift -->
                        <Grid Grid.Row="0" x:Name="WarningPopupDragArea" Tag="{Binding ElementName=WarningPopup}" Cursor="Hand" ClipToBounds="False" Background="Transparent">

                            <Grid ClipToBounds="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/> <!-- war vorher 1 -->
                                    
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" ClipToBounds="False"> 
                                    <Image Margin="0,-10,20,0"
                                        Tag="_internal/Assets/warning.png"
                                        Source="https://img.icons8.com/?size=100&amp;id=KarJz0n4bZSj&amp;format=png&amp;color=000000"
                                        Width="40" Height="40" ClipToBounds="False" />
                                    <TextBlock Text="{Binding [Warning_Popup.Label], Mode=OneWay}"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="Red"
                                            Margin="0,0,0,10"
                                            HorizontalAlignment="Left" />
                                    <Image Margin="20,-10,0,0"
                                        Tag="_internal/Assets/warning.png"
                                        Source="https://img.icons8.com/?size=100&amp;id=KarJz0n4bZSj&amp;format=png&amp;color=000000"
                                        Width="40" Height="40" ClipToBounds="False" />

                                </StackPanel>
                                <Border Grid.Row="1"
                                        Height="1"
                                        Background="#66FFFFFF"
                                        Margin="0,0,0,10" />                                
                            </Grid>
                        </Grid>
                        <!-- Änderungen -->
                        <StackPanel x:Name="WarningContainer" Grid.Row="1">
                            <TextBlock Text="{Binding [Warning_Popup.Description], Mode=OneWay}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,10" />

                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnWarningYes"
                                        Grid.Column="0"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"
                                        Foreground="White"
                                        Style="{StaticResource ConfirmButtonStyle}"
                                        Margin="0,0,3,0">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Image Tag="_internal/Assets/checkmark.png"
                                            Source="https://img.icons8.com/fluency/48/ok--v1.png"
                                            Width="45" Height="45"
                                            Margin="-7,0,0,0" />
                                        <TextBlock Text="{Binding [Buttons.Yes], Mode=OneWay}"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                FontSize="18"
                                                Margin="-3,0,8,0"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnWarningNo"
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontFamily="Segoe UI Semibold"
                                        Foreground="White"
                                        Style="{StaticResource AbortButtonStyle}">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Image Tag="_internal/Assets/cancel.png"
                                            Source="https://img.icons8.com/?size=100&amp;id=fYgQxDaH069W&amp;format=png&amp;color=000000"
                                            Width="45" Height="45"
                                            Margin="-4,0,0,0" />
                                        <TextBlock Text="{Binding [Buttons.No], Mode=OneWay}"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                FontSize="18"
                                                Margin="-8,0,10,0"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>
        </Grid>        
    </Border>

</Window>