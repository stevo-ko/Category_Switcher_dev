                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />      <!-- URL -->
                                        <ColumnDefinition Width="20" />      <!-- Abstand -->
                                        <ColumnDefinition Width="1*" />      <!-- Port -->
                                    </Grid.ColumnDefinitions>

                                    <!-- URL Feld mit Label -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                                        <TextBlock Text="URL"
                                                FontFamily="Segoe UI"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="LightGray"
                                                Margin="0,0,0,5"
                                                HorizontalAlignment="Center" />
                                        <TextBox x:Name="StreamerBotUrl"
                                                Padding="0,8,0,8"
                                                VerticalContentAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                TextAlignment="Center"
                                                Background="Transparent"
                                                BorderBrush="DarkGray"
                                                BorderThickness="0,0,0,1"
                                                FontFamily="Segoe UI"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="White"
                                                Width="100"
                                                IsEnabled="{Binding ElementName=togglestreamerbot, Path=IsChecked}"
                                                Text="" />
                                    </StackPanel>

                                    <!-- Port Feld mit Label -->
                                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                                        <TextBlock Text="Port"
                                                FontFamily="Segoe UI"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="LightGray"
                                                Margin="0,0,0,5"
                                                HorizontalAlignment="Center" />
                                        <TextBox x:Name="StreamerBotPort"
                                                Padding="0,8,0,8"
                                                VerticalContentAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                TextAlignment="Center"
                                                Background="Transparent"
                                                BorderBrush="DarkGray"
                                                BorderThickness="0,0,0,1"
                                                FontFamily="Segoe UI"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="White"
                                                Width="80"
                                                IsEnabled="{Binding ElementName=togglestreamerbot, Path=IsChecked}"
                                                Text="" />
                                    </StackPanel>
                                </Grid>
                                <!-- Beschreibung -->
                                <TextBlock Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="50,10,50,0"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        FontStyle="Italic"
                                        Foreground="LightGray"
                                        Text="{Binding [Streamer_bot.Description]}"
                                        TextWrapping="Wrap" />

                                <!-- Separator -->
                                <Separator Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="100,30,100,10"
                                        Style="{StaticResource StyledSeparator}" />
                            </Grid>

                            <!-- Similarity Section -->
                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!-- Label -->
                                <TextBlock x:Name="SimilarityLabel"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="10,0,0,0"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Text="{Binding [Similarity.Label]}" />
                                <!-- Toggle Switch -->
                                <ToggleButton x:Name="toggleSimilarity"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              Margin="0,0,10,0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              IsChecked="False"
                                              Style="{StaticResource ToggleSwitchStyle}" />
                                <!-- Slider -->
                                <Border Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="10,0,10,0">
                                    <Slider x:Name="sldSimilarity"
                                            Style="{StaticResource ModernSliderStyle}"
                                            Margin="40,10,40,0"
                                            Width="450"
                                            Background="Transparent"
                                            IsEnabled="{Binding ElementName=toggleSimilarity, Path=IsChecked}"
                                            IsSnapToTickEnabled="True"
                                            IsMoveToPointEnabled="True"
                                            Maximum="100"
                                            Minimum="1"
                                            TickFrequency="1"
                                            Value="98" />
                                </Border>
 
                                <!-- Current Value Display -->
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="50,5,0,0"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           Foreground="White"
                                           >
                                    <Run Text="{Binding [Similarity.Current], Mode=OneWay}" />
                                    <Run Text="{Binding ElementName=sldSimilarity, Path=Value, StringFormat={}{0:F0}%, Mode=OneWay}" />
