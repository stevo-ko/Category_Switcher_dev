                            <!-- Zentrale Linie (Track-Hintergrund) -->
                            <Border x:Name="TrackBackground"
                                    Background="#E0E0E0"
                                    Height="6"
                                    CornerRadius="3"
                                    VerticalAlignment="Center"
                                    Margin="9,0"/> <!-- Abstand für Thumb (Radius) -->

