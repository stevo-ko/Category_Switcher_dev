                                <ToggleButton x:Name="toggleKick"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              Margin="0,0,10,0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              IsChecked="True"
                                              Style="{StaticResource ToggleSwitchStyle}" />
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Foreground="LightGray"
                                           Margin="50,10,50,0"
                                           TextWrapping="Wrap" >
                                    <Run Text="{Binding [Kick.Description], Mode=OneWay}" />
                                    <LineBreak/>
                                    <Run Text="{Binding [General.Warning], Mode=OneWay}" Foreground="OrangeRed" FontWeight="Bold" />
                                    <LineBreak/>
                                    <Run Text="{Binding [Kick.Experimental], Mode=OneWay}" />
                                </TextBlock>

                            </Grid>

                            <!-- Enable Playnite Section -->
                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">                             
                                <!-- Label -->
                                <TextBlock x:Name="PlayniteLabel"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="10,0,0,0"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Text="{Binding [Playnite.Label]}" />
                                <Image Tag="_internal/Assets/playnite.png" Source=""
                                    Width="24" Height="24" Margin="5,0,0,0" />     
                                </StackPanel>                           
                                <!-- Toggle -->
                                <ToggleButton x:Name="togglePlaynite"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              Margin="0,0,10,0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              IsChecked="True"
                                              Style="{StaticResource ToggleSwitchStyle}" />
                        
                                <!-- Description -->
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Foreground="LightGray"
                                           Margin="50,10,50,0"
                                           TextWrapping="Wrap" >
                                    <Run Text="{Binding [Playnite.Description], Mode=OneWay}" />
                                    <LineBreak/>
                                    <Run Text="{Binding [General.Requirements], Mode=OneWay}" Foreground="LimeGreen" FontWeight="Bold" />
                                    <LineBreak/>
                                    <Run Text="{Binding [Playnite.Requirements], Mode=OneWay}"/>
                                    <LineBreak/>
                                    <Run Text="{Binding [General.Warning], Mode=OneWay}" Foreground="OrangeRed" FontWeight="Bold" />
                                    <LineBreak/>
                                    <Run Text="{Binding [Playnite.Experimental], Mode=OneWay}" />
                                </TextBlock>

