                                                        CornerRadius="16"
                                                        Padding="{TemplateBinding Padding}">
                                                        <Border.Background>
                                                            <!-- Normal State -->
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#2C5364" Offset="0"/>
                                                                <GradientStop Color="#203A43" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
