                                <!-- Description -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="50,10,50,0"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Foreground="LightGray"
                                           Text="{Binding [Similarity.Description]}"                           
                                           TextWrapping="Wrap" />
                                <!-- Separator -->
                                <Separator Grid.Row="4"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="100,30,100,10"
                                        Style="{StaticResource StyledSeparator}" />
                            </Grid>

                            <!-- Enable Kick Section -->
                            <Grid Margin="0,0,0,10">
