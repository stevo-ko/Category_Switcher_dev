                            <Track x:Name="PART_Track"
                                VerticalAlignment="Center"
                                Margin="9,0"> <!-- gleich wie Border für Ausrichtung -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="DecreaseRepeatButton"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                IsEnabled="False"
                                                Height="6"
                                                Template="{x:Null}"
                                                />
