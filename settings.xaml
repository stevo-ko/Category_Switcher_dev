                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Label -->
                                <TextBlock x:Name="ExcludedFoldersLabel"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding [Excluded_Folders.Label]}" />

                                <!-- Toggle Switch -->
                                <ToggleButton x:Name="toggleExcludedFolders"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            IsChecked="False"
                                            Style="{StaticResource ToggleSwitchStyle}" />

                                <!-- ListBox for Excluded Folders -->
                                <Border Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="40,10,40,0">
                                    <ListBox x:Name="Excluded_Folders"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="White"
                                            MaxHeight="250"
                                            SelectionMode="Multiple">
                                
                                        <!-- Stil für ListBox -->
                                        <ListBox.Style>
                                            <Style TargetType="ListBox">
                                                <Setter Property="OverridesDefaultStyle" Value="True" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListBox">
                                                            <Border x:Name="Bd"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    SnapsToDevicePixels="True">
                                                                <ScrollViewer x:Name="PART_ScrollViewer"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            Background="Transparent"
                                                                            Focusable="False"
                                                                            IsEnabled="True"
                                                                            Style="{StaticResource CustomScrollViewerStyle}">
                                                                    <ItemsPresenter />
                                                                </ScrollViewer>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsChecked, ElementName=toggleExcludedFolders}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.Style>

                                        <!-- Stil für ListBoxItem -->
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="IsHitTestVisible" Value="True" />
                                                <Setter Property="Focusable" Value="True" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsChecked, ElementName=toggleExcludedFolders}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                        <Setter Property="IsHitTestVisible" Value="False" />
                                                        <Setter Property="Focusable" Value="False" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <!-- Beispielinhalte -->
                                        <ListBoxItem Content="FolderXY" />
                                    </ListBox>
                                </Border>


                                <!-- Buttons Add & Delete -->
                                <StackPanel Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,5,0,0">
                                    
                                    <Button x:Name="btnAddFolderNamePopup"
                                                Style="{StaticResource AddButtonStyle}"
                                                Content="{Binding [Buttons.Add]}"
                                                MinWidth="70"
                                                Margin="5,0"
                                                IsEnabled="{Binding ElementName=toggleExcludedFolders, Path=IsChecked}" />

                                    <Button x:Name="btnDelExcludedFolders"
                                            Style="{StaticResource DeleteButtonStyle}"
                                            Content="{Binding [Buttons.Del]}"
                                            Width="Auto"
                                            Height="Auto"
                                            Padding="12,8"
                                            Margin="5,0"
                                            IsEnabled="{Binding ElementName=toggleExcludedFolders, Path=IsChecked}" />
                                </StackPanel>  
                                <!-- Description -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="50,10,50,0"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Foreground="LightGray"
                                           TextWrapping="Wrap" >
                                    <Run Text="{Binding [Excluded_Folders.Description], Mode=OneWay}" />
                                    <LineBreak/>
                                    <Run Text="{Binding [General.Warning], Mode=OneWay}" Foreground="OrangeRed" FontWeight="Bold" />
                                    <LineBreak/>
                                    <Run Text="{Binding [Excluded_Folders.WarningNote], Mode=OneWay}" />
                                </TextBlock>

                                <!-- Separator -->
                                <Separator Grid.Row="4"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="100,30,100,10"
                                           Style="{StaticResource StyledSeparator}" />   
                            </Grid> 

                            <!-- Streamer.Bot URL und Port nebeneinander -->
                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />  <!-- Header + Toggle -->
                                    <RowDefinition Height="Auto" />  <!-- URL + Port Eingabefelder -->
                                    <RowDefinition Height="Auto" />  <!-- Beschreibung -->
                                    <RowDefinition Height="Auto" />  <!-- Separator -->
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />            <!-- Label + Toggle -->
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Label -->
                                <TextBlock x:Name="StreamerbotLabel"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding [Streamer_bot.Label]}" />

                                <!-- Toggle -->
                                <ToggleButton x:Name="togglestreamerbot"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            IsChecked="False"
                                            Style="{StaticResource ToggleSwitchStyle}" />

                                <!-- Eingabefelder für URL und Port nebeneinander, zentriert und kleiner -->
