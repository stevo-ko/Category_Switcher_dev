                                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                                    </Ellipse.RenderTransform>
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect BlurRadius="4"
                                                                        ShadowDepth="0"
                                                                        Color="#66000000"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="EllipseThumb" Property="Fill" Value="#FFB0B0B0"/>
                                                    </Trigger>                                                    
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="EllipseThumb" Property="Fill" Value="#00FFFF" />
                                                    </Trigger>

                                                    <!-- Animation via EventTrigger für IsPressed -->
                                                    <EventTrigger RoutedEvent="Thumb.PreviewMouseLeftButtonDown">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="EllipseThumb"
                                                                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                To="1.3" Duration="0:0:0.15" />
                                                                <DoubleAnimation Storyboard.TargetName="EllipseThumb"
                                                                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                To="1.3" Duration="0:0:0.15" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>

                                                    <EventTrigger RoutedEvent="Thumb.PreviewMouseLeftButtonUp">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="EllipseThumb"
                                                                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                To="1" Duration="0:0:0.15" />
                                                                <DoubleAnimation Storyboard.TargetName="EllipseThumb"
                                                                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                To="1" Duration="0:0:0.15" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

