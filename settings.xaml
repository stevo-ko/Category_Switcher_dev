                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb" Width="18" Height="18" Cursor="Hand">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse x:Name="EllipseThumb"
                                                        Width="18"
                                                        Height="18"
                                                        Fill="#39A852"
                                                        Stroke="White"
                                                        StrokeThickness="2"
                                                        RenderTransformOrigin="0.5,0.5">
