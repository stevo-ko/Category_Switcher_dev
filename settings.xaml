                                       FontFamily="Segoe UI"
                                       FontSize="28"
                                       FontWeight="Black"
                                       Foreground="White"
                                       Text="{Binding [Main_Setting.Label]}" />
                            <!-- Descriptive Text for General Settings -->
                            <TextBlock Margin="0,10,0,0"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       FontStyle="Italic"
                                       Foreground="LightGray"
                                       Text="{Binding [Main_Setting.Description], Mode=OneWay}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                            <!-- Custom Separator -->
                            <Separator Margin="30,25,30,20"
                                       Style="{StaticResource StyledMainSeparator}" />   

                            <!-- Delay General Section -->
