                      Background="Transparent"
                      Visibility="Collapsed">
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="SettingsOverlayTransform" X="0"/>
                    </Grid.RenderTransform>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- About Button (Left) -->
                        <Button x:Name="btnAbout"
                                Grid.Column="0"
                                Width="48" 
                                Height="48"
                                Background="Transparent"
                                Margin="10,5,0,5"
                                BorderThickness="0"
                                Cursor="Hand"
                                OverridesDefaultStyle="True">

                            <Button.ToolTip>
                                <ToolTip Placement="Bottom"
                                        HorizontalOffset="50"
                                        VerticalOffset="-10" 
                                        HasDropShadow="True"
                                        Foreground="White"
                                        Padding="8,4"
                                        FontSize="13"
                                        FontFamily="Segoe UI"
                                        Content="{Binding [General.About]}"
                                        Opacity="0">

                                    <!-- Custom Style für runde Ecken -->
                                    <ToolTip.Style>
                                        <Style TargetType="ToolTip">
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToolTip">
                                                        <Border Background="#802C5364"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToolTip.Style>
                                    <!-- Animation Triggers -->
                                    <ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="ToolTip.Opened">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="0" To="1"
                                                                    Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="ToolTip.Closed">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="1" To="0"
                                                                    Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ToolTip.Triggers>
                                </ToolTip>
                            </Button.ToolTip>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Image x:Name="AboutIcon"
                                            Tag = "_internal/Assets/AboutIcon.png"
                                            Source="https://img.icons8.com/?size=100&amp;id=FBVkROUxDU9T&amp;format=png&amp;color=000000"
                                            Stretch="Uniform"
                                            RenderTransformOrigin="0.5,0.5"
                                            >
                                            <Image.RenderTransform>
                                                <ScaleTransform x:Name="iconScale" ScaleX="1" ScaleY="1" />
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <!-- Press Effekt -->
                                        <EventTrigger RoutedEvent="PreviewMouseDown">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>

                                        <EventTrigger RoutedEvent="PreviewMouseUp">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="AboutIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <!-- Header Title (Centered) -->
                        <TextBlock Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI"
                                   FontSize="24"
                                   Foreground="White"
                                   Text="{Binding [General.Header]}" />
                        <!-- Save Button (Right) -->
                        <Button x:Name="btnSave"
                                Grid.Column="2"
                                Width="48"
                                Height="48"
                                Margin="0,5,10,5"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                FocusVisualStyle="{x:Null}"
                                OverridesDefaultStyle="True">
                            <Button.ToolTip>
                                <ToolTip Placement="Left"
                                        PlacementTarget="{Binding ElementName=btnSave}"
                                        HorizontalOffset="-3"
                                        VerticalOffset="38" 
                                        HasDropShadow="True"
                                        Foreground="White"
                                        Padding="8,4"
                                        FontSize="13"
                                        FontFamily="Segoe UI"
                                        Content="{Binding [General.Save]}"
                                        Opacity="0">

                                    <!-- Custom Style für runde Ecken -->
                                    <ToolTip.Style>
                                        <Style TargetType="ToolTip">
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToolTip">
                                                        <Border Background="#802C5364"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToolTip.Style>
                                    <!-- Animation Triggers -->
                                    <ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="ToolTip.Opened">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="0" To="1"
                                                                    Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="ToolTip.Closed">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="1" To="0"
                                                                    Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ToolTip.Triggers>
                                </ToolTip>
                            </Button.ToolTip>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Image x:Name="SaveIcon"
                                            Tag = "_internal/Assets/SaveIcon.png"
                                            Source="https://img.icons8.com/?size=100&amp;id=X2IT2OCrFTHc&amp;format=png&amp;color=000000"
                                            Stretch="Uniform"
                                            RenderTransformOrigin="0.5,0.5"
                                            >
                                            <Image.RenderTransform>
                                                <ScaleTransform x:Name="iconScale" ScaleX="1" ScaleY="1" />
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                           
                                    <ControlTemplate.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <!-- Press Effekt -->
                                        <EventTrigger RoutedEvent="PreviewMouseDown">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>

                                        <EventTrigger RoutedEvent="PreviewMouseUp">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="SaveIcon"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Scrollable content in row 1 -->
                    <ScrollViewer Grid.Row="1"
                                  Margin="10"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Style="{StaticResource CustomScrollViewerStyle}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <!-- Custom Separator -->
                            <Separator Margin="30,10,30,20"
                                       Style="{StaticResource StyledMainSeparator}" />
                            <!-- Header Text for General Settings -->
                            <TextBlock HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="28"
                                       FontWeight="Black"
                                       Foreground="White"
                                       Text="{Binding [Language_Setting.Label]}" />
                            <!-- Descriptive Text for General Settings -->
                            <TextBlock Margin="0,10,0,0"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       FontStyle="Italic"
                                       Foreground="LightGray"
                                       Text="{Binding [Language_Setting.Description], Mode=OneWay}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="50"/> <!-- Abstand zwischen Buttons -->
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- ENGLISH Button + Text -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <Button x:Name="btnEnglish"
                                            Width="72"
                                            Height="72"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            OverridesDefaultStyle="True"
                                            Margin="10,20,10,2">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid RenderTransformOrigin="0.5,0.5">
                                                    <Grid.RenderTransform>
                                                        <ScaleTransform x:Name="buttonScale" ScaleX="1" ScaleY="1" />
                                                    </Grid.RenderTransform>
                                                    <Border x:Name="HighlightCircle"
                                                            Background="Transparent"
                                                            CornerRadius="33"
                                                            Width="68"
                                                            Height="68" />
                                                    <Image x:Name="EnglishFlag"
                                                        Tag="_internal/Assets/Flag_Eng.png"
                                                        Source="https://img.icons8.com/?size=100&amp;id=ShNNs7i8tXQF&amp;format=png&amp;color=000000"
                                                        Stretch="Uniform"
                                                        RenderTransformOrigin="0.5,0.5"
                                                        >
                                                        <Image.RenderTransform>
                                                            <ScaleTransform x:Name="iconScale" ScaleX="1" ScaleY="1" />
                                                        </Image.RenderTransform>
                                                    </Image>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBlock Text="{Binding [Language.English]}" HorizontalAlignment="Center" FontSize="14" Foreground="Gray" />
                                </StackPanel>

                                <!-- DEUTSCH Button + Text -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <Button x:Name="btnGerman"
                                            Width="72"
                                            Height="72"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            OverridesDefaultStyle="True"
                                            Margin="10,20,10,2">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid RenderTransformOrigin="0.5,0.5">
                                                    <Grid.RenderTransform>
                                                        <ScaleTransform x:Name="buttonScale" ScaleX="1" ScaleY="1" />
                                                    </Grid.RenderTransform>
                                                    <Border x:Name="HighlightCircle"
                                                            Background="Transparent"
                                                            CornerRadius="33"
                                                            Width="68"
                                                            Height="68" />
                                                    <Image x:Name="GermanFlag"
                                                        Tag="_internal/Assets/Flag_Ger.png"
                                                        Source="https://img.icons8.com/?size=100&amp;id=vRrbNnaD93Ys&amp;format=png&amp;color=000000"
                                                        Stretch="Uniform" 
                                                        />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.1"/>

                                                                
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="buttonScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBlock Text="{Binding [Language.German]}" HorizontalAlignment="Center" FontSize="14" Foreground="Gray" />
                                </StackPanel>
                            </Grid>

                            <!-- Custom Separator -->
                            <Separator Margin="30,30,30,15"
                                       Style="{StaticResource StyledMainSeparator}" />
                            <!-- Header Text for Important Settings -->
                            <TextBlock x:Name="ImportantHeader"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="28"
                                       FontWeight="Black"
                                       Foreground="White"
                                       Text="{Binding [Important_Settings.Header]}" 
                                       />
                            <!-- Descriptive Text for Important Settings -->
                            <TextBlock Margin="0,10,0,0"
                                       HorizontalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       FontStyle="Italic"
                                       Foreground="LightGray"
                                       Text="{Binding [Important_Settings.Description]}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                            <!-- Custom Separator -->
                            <Separator Margin="30,25,30,20"
                                       Style="{StaticResource StyledMainSeparator}" />

                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Label -->
                                <TextBlock x:Name="AllowedPathsLabel"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding [Allowed_Paths.Label]}" />

                                <!-- Toggle Switch -->
                                <ToggleButton x:Name="toggleAllowedPaths"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            IsChecked="False"
                                            Style="{StaticResource ToggleSwitchStyle}" />

                                <!-- ListBox for role selection -->
                                <Border Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="40,10,40,0">
                                <ListBox x:Name="Allowed_Paths"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="White"
                                        MaxHeight="250"
                                        SelectionMode="Multiple">
                                    
                                    <!-- Stil für ListBox -->
                                    <ListBox.Style>
                                        <Style TargetType="ListBox">
                                            <Setter Property="OverridesDefaultStyle" Value="True" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBox">
                                                        <Border x:Name="Bd"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                            <ScrollViewer x:Name="PART_ScrollViewer"
                                                                        HorizontalScrollBarVisibility="Auto"
                                                                        Padding="{TemplateBinding Padding}"
                                                                        Background="Transparent"
                                                                        Focusable="False"
                                                                        IsEnabled="True"
                                                                        Style="{StaticResource CustomScrollViewerStyle}">
                                                                <ItemsPresenter Margin="0,0,0,5"/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=toggleAllowedPaths}" Value="False">
                                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.Style>

                                    <!-- Stil für ListBoxItem -->
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="IsHitTestVisible" Value="True" />
                                            <Setter Property="Focusable" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=toggleAllowedPaths}" Value="False">
                                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                    <Setter Property="IsHitTestVisible" Value="False" />
                                                    <Setter Property="Focusable" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <!-- Beispielinhalte -->
                                    <ListBoxItem Content="C:\\User\\Games\\" />
                                </ListBox>
                                </Border>

                                <!-- Buttons Add & Delete -->
                                <StackPanel Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,5,0,0">
                                
                                    <Button x:Name="btnAddPathPopup"
                                            Style="{StaticResource AddButtonStyle}"
                                            Content="{Binding [Buttons.Add]}"
                                            MinWidth="70"
                                            Margin="5,0"
                                            IsEnabled="{Binding ElementName=toggleAllowedPaths, Path=IsChecked}" />

                                    <Button x:Name="btnDelAllowedPath"
                                            Style="{StaticResource DeleteButtonStyle}"
                                            Content="{Binding [Buttons.Del]}"
                                            Width="Auto"
                                            Height="Auto"
                                            Padding="12,8"
                                            Margin="5,0"
                                            IsEnabled="{Binding ElementName=toggleAllowedPaths, Path=IsChecked}" />


                                </StackPanel>                              
                                <!-- Description -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="50,10,40,0"
