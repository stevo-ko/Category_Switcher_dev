                                                    <Setter TargetName="bg" Property="Background"
                                                            Value="#1A2E36"/>
                                                    <Setter TargetName="rootGrid" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="False">

                                                    <Setter TargetName="rootGrid" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <CheckBox x:Name="AutoUpdateCheckbox" Content="Automatisch nach Updates prüfen"
                                        Cursor="Hand"
                                        HorizontalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        TextOptions.TextFormattingMode="Display"
                                        TextOptions.TextRenderingMode="ClearType"
                                        UseLayoutRounding="True"
                                        SnapsToDevicePixels="True"
                                        
                                        >
                                    <CheckBox.Template>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Grid x:Name="rg" RenderTransformOrigin="0.5,0.5">
                                                <Grid.RenderTransform>
                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                </Grid.RenderTransform>
                                            <!-- Neue Border für Hintergrundgradient -->
                                            <Border x:Name="OuterBorder" CornerRadius="12" Padding="8">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#3A6B80" Offset="0"/>  <!-- heller, sichtbarer -->
                                                        <GradientStop Color="#1F3843" Offset="0.5"/>  <!-- dunkler, Tiefe -->
                                                        <GradientStop Color="#0F1F25" Offset="1"/>  <!-- sehr dunkles Ende -->
                                                    </LinearGradientBrush>
                                                </Border.Background>

                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- Hintergrund mit DropShadow -->
                                                    <Border x:Name="CheckBoxBorder" Width="24" Height="24" CornerRadius="6"
                                                            BorderBrush="White" BorderThickness="2"
                                                            Background="Transparent" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                                        <Border.RenderTransform>
                                                            <ScaleTransform x:Name="CheckScale" ScaleX="1" ScaleY="1"/>
                                                        </Border.RenderTransform>
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                                                        </Border.Effect>
                                                        <Grid>
                                                            <Rectangle x:Name="CheckFill" Fill="Transparent" RadiusX="4" RadiusY="4"/>
                                                            <Path x:Name="CheckIcon" Data="M 0 5 L 5 10 L 12 0" Stroke="White" StrokeThickness="2"
                                                                Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <!-- Text -->
                                                    <ContentPresenter VerticalAlignment="Center" 
                                                        Margin="5,0,0,0"
                                                        TextOptions.TextFormattingMode="Display"
                                                        TextOptions.TextRenderingMode="ClearType"
                                                        UseLayoutRounding="True"
                                                        SnapsToDevicePixels="True"                                                        
                                                        />
                                                </StackPanel>
                                            </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <!-- Checked -->
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckFill" Property="Fill">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#4CAF50" Offset="0"/>
                                                                <GradientStop Color="#2E7D32" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <!-- Unchecked -->
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="CheckFill" Property="Fill" Value="Transparent"/>
                                                    <Setter TargetName="CheckIcon" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="OuterBorder" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#3E7C95" Offset="0"/>
                                                                <GradientStop Color="#2C5364" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value> 
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter TargetName="OuterBorder" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#3A6B80" Offset="0"/>
                                                                <GradientStop Color="#1F3843" Offset="0.5"/>
                                                                <GradientStop Color="#0F1F25" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>   
                                                    </Setter>                                                 
                                                </Trigger>
                                                <!-- Pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="OuterBorder" Property="Background"
                                                            Value="#1A2E36"/>
                                                    <Setter TargetName="rg" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                                        </Setter.Value>
                                                    </Setter>                                                    
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="CheckScale" Storyboard.TargetProperty="ScaleX"
                                                                                To="0.95" Duration="0:0:0.05"/>
                                                                <DoubleAnimation Storyboard.TargetName="CheckScale" Storyboard.TargetProperty="ScaleY"
                                                                                To="0.95" Duration="0:0:0.05"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="CheckScale" Storyboard.TargetProperty="ScaleX"
                                                                                To="1" Duration="0:0:0.05"/>
                                                                <DoubleAnimation Storyboard.TargetName="CheckScale" Storyboard.TargetProperty="ScaleY"
                                                                                To="1" Duration="0:0:0.05"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="False">

                                                    <Setter TargetName="rg" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>                                                
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </CheckBox.Template>
                                </CheckBox>
                                <!-- Trenner -->
                                <Separator Margin="0,10,0,20" Opacity="0.4"/>

                                <!-- Credits -->
                                <TextBlock HorizontalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="{Binding [Credits.Header], Mode=OneWay}"
                                        Margin="0,0,0,10"/>

                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontSize="16"
                                            Foreground="LightGray"
                                            Margin="0,0,0,5"
                                            HorizontalAlignment="Center">
                                        <Run Text="{Binding [Credits.GUI], Mode=OneWay}" />
                                        <Hyperlink x:Name="MustacheLink" NavigateUri="https://mustachedmaniac.com/"
                                                Foreground="LightSkyBlue">
                                            MustachedManiac
                                        </Hyperlink>
                                    </TextBlock>                               

                                    <TextBlock FontSize="16"
                                            Foreground="LightGray"
                                            TextWrapping="Wrap"
                                            HorizontalAlignment="Center">
                                        <Run Text="{Binding [Credits.Icons], Mode=OneWay}" />
                                        <Hyperlink x:Name="Icons8Link" NavigateUri="https://icons8.com"
                                                Foreground="LightSkyBlue"
                                                >
                                            Icons8
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Update Overlay -->
                <Grid x:Name="UpdateOverlay"
                      Margin="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Panel.ZIndex="11"
                      Background="Transparent"
                      Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- Header (Row 0): Only Back and Close buttons -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- Back Arrow Button -->
                        <Button x:Name="btnBackUpdate"
                                Grid.Column="0"
                                Width="48" 
                                Height="48"
                                Background="Transparent"
                                Margin="10,5,0,0"
                                BorderThickness="0"
                                Cursor="Hand"
                                OverridesDefaultStyle="True">
                            <Button.ToolTip>
                                <ToolTip Placement="Bottom"
                                        HorizontalOffset="50"
                                        VerticalOffset="-10" 
                                        HasDropShadow="True"
                                        Foreground="White"
                                        Padding="8,4"
                                        FontSize="13"
                                        FontFamily="Segoe UI"
                                        Content="{Binding [General.Back]}"
                                        Opacity="0">

                                    <!-- Custom Style für runde Ecken -->
                                    <ToolTip.Style>
                                        <Style TargetType="ToolTip">
                                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToolTip">
                                                        <Border Background="#802C5364"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToolTip.Style>
                                    <!-- Animation Triggers -->
                                    <ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="ToolTip.Opened">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="0" To="1"
                                                                    Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="ToolTip.Closed">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                    From="1" To="0"
                                                                    Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ToolTip.Triggers>
                                </ToolTip>
                            </Button.ToolTip>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Image x:Name="BackIconUpdate"
                                            Tag = "_internal/Assets/BackIcon.png"
                                            Source="https://img.icons8.com/fluency/100/left.png"
                                            Stretch="Uniform"
                                            RenderTransformOrigin="0.5,0.5"
                                            >
                                            <Image.RenderTransform>
                                                <ScaleTransform x:Name="iconScale" ScaleX="1" ScaleY="1" />
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1" Duration="0:0:0.1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <!-- Press Effekt -->
                                        <EventTrigger RoutedEvent="PreviewMouseDown">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="0.95" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>

                                        <EventTrigger RoutedEvent="PreviewMouseUp">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                    <DoubleAnimation Storyboard.TargetName="BackIconUpdate"
                                                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                    To="1.0" Duration="0:0:0.05"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border CornerRadius="20"
                                
                                Padding="20"
                                Margin="20"
                                > 
                            <StackPanel x:Name="AboutUpd"
                                        Width="560"
                                        Orientation="Vertical"
                                        HorizontalAlignment="Center">

                                <!-- Switcher Icon -->
                                <Border Width="100" Height="100"
                                        CornerRadius="80"
                                        Margin="0,-80,0,0"
                                        HorizontalAlignment="Center">
                                    <Border.Background>
                                        <SolidColorBrush Color="Black" Opacity="0.3"/>
                                    </Border.Background>
                                    <Image Tag="_internal/Assets/icon.ico"
                                        Source=""
                                        Stretch="Uniform"
                                        Margin="20"
                                        />
                                </Border>
 
                                <!-- Titel & Version -->
                                <TextBlock HorizontalAlignment="Center"
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="28"
                                        Foreground="White"
                                        Text="{Binding [Update_Overlay.Label], Mode=OneWay}"
                                        Margin="0,0,0,5"/>

                                <Grid Margin="10,10,10,15" Width="Auto" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10"/> 
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Versionsanzeige mit Pfeil -->
                                    <Border Grid.Row="0" Grid.Column="0" Background="#500F0F0F" CornerRadius="12" Padding="12,10,12,10" BorderBrush="#15FFFFFF" BorderThickness="1">
                                        <StackPanel>
                                        <TextBlock Grid.Column="0" FontSize="16" Foreground="LightGray" TextAlignment="Center" Text="{Binding [General.Settingmenu_Version], Mode=OneWay}" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding [Update_Overlay.Actual]}" FontSize="14" Foreground="LightGray" FontWeight="Bold" Margin= "0,0,5,0" />
                                                <TextBlock x:Name="YourVersionSettings" FontSize="14" Foreground="LightGray" Text="" FontWeight="Bold"/>
                                                <TextBlock x:Name="ArrowSettings" FontSize="14" Foreground="LightGray" Text=" → " Margin="5,0" Visibility="Collapsed"/>
                                                <TextBlock Text="{Binding [Update_Overlay.Latest]}" FontSize="14" Foreground="LightGray" FontWeight="Bold" Margin= "0,0,5,0" Visibility="{Binding Visibility, ElementName=ArrowSettings}" />
                                                <TextBlock x:Name="UpdateVersionSetting" FontSize="14" Foreground="LightGreen" Text="" FontWeight="Bold" Visibility="{Binding Visibility, ElementName=ArrowSettings}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Row="0" Grid.Column="2" Background="#500F0F0F" CornerRadius="12" Padding="12,10,12,10" BorderBrush="#15FFFFFF" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock FontSize="16" Foreground="LightGray" TextAlignment="Center" Text="{Binding [General.Program_Version], Mode=OneWay}" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">     
                                                <TextBlock Text="{Binding [Update_Overlay.Actual]}" FontSize="14" Foreground="LightGray" FontWeight="Bold" Margin= "0,0,5,0"/>
                                                <TextBlock x:Name="YourVersionProgram" FontSize="14" Foreground="LightGray" Text="" FontWeight="Bold"/>
                                                <TextBlock x:Name="ArrowProgram" FontSize="14" Foreground="LightGray" Text=" → " Margin="5,0" Visibility="Collapsed"/>
                                                <TextBlock Text="{Binding [Update_Overlay.Latest]}" FontSize="14" Foreground="LightGray" FontWeight="Bold" Margin= "0,0,5,0" Visibility="{Binding Visibility, ElementName=ArrowProgram}" />
                                                <TextBlock x:Name="UpdateVersionProgram" FontSize="14" Foreground="LightGreen" Text="" FontWeight="Bold" Visibility="{Binding Visibility, ElementName=ArrowProgram}"/>    
                                            </StackPanel>
                                        </StackPanel>                          
                                    </Border>

                                </Grid>


                            <Border x:Name="Update_Available" Background="#500F0F0F" CornerRadius="12" Padding="12,10,12,10" BorderBrush="#15FFFFFF" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock FontSize="16" Foreground="LightGreen" TextAlignment="Center" Margin="15,0,15,0" Text="{Binding [Update_Overlay.Update_Available]}" />
                            </Border>
                            <Border x:Name="NoUpdate_Available" Background="#500F0F0F" CornerRadius="12" Padding="12,10,12,10" BorderBrush="#15FFFFFF" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock FontSize="16" Foreground="LightGreen" TextAlignment="Center" Margin="15,0,15,0" Text="{Binding [Update_Overlay.No_Update]}" />
                            </Border>
                            <Border x:Name="RateLimit" Background="#500F0F0F" CornerRadius="12" Padding="12,10,12,10" BorderBrush="#15FFFFFF" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock FontSize="16" Foreground="Red" TextAlignment="Center" Margin="15,0,15,0" Text="{Binding [Update_Overlay.RateLimit]}" />
                            </Border>
                            <!-- Trenner -->
                            <Separator Margin="0,0,0,20" Opacity="0.4"/>
                            <Grid Grid.Row="1" >
                            <!-- Changelog mit Animation -->
                            <Border x:Name="Changelog"
                                    
                                    CornerRadius="20"
                                    Margin="0"
                                    Background="#33000000"
                                    Padding="10"
                                    Visibility="Collapsed"
                                    ClipToBounds="False"
                                    >
                                <Border.Resources>
                                    <!-- FadeIn Storyboard (von oben nach unten) -->
                                    <Storyboard x:Key="FadeInStoryboard">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1" Duration="0:0:0.35">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="-20" To="0" Duration="0:0:0.10">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>

                                    <!-- FadeOut Storyboard (nach oben weg) -->
                                    <Storyboard x:Key="FadeOutStoryboard">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="1" To="0" Duration="0:0:0.20">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-20" Duration="0:0:0.20">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </Border.Resources>

                                <Border.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Border.RenderTransform>
                                <StackPanel x:Name="ChangelogStackPanel" HorizontalAlignment="Center" Width="530">

                                <!-- Changelog -->
                                <TextBlock Text="Changelog:"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Margin="0,0,0,5"
                                        />
                                <!-- <StackPanel x:Name="ChangelogStackPanel"  ClipToBounds="True"/></StackPanel> -->
                                <ScrollViewer x:Name="ChangelogScrollViewer" MinHeight="50" MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0" Background="Transparent" Style="{StaticResource CustomScrollViewerStyle}" ClipToBounds="False">
                                    
                                    <RichTextBox x:Name="ChangelogMarkdown"
                                                IsReadOnly="True"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontFamily="Segoe UI Emoji"
                                                FontSize="16"
                                                Foreground="LightGray"
                                                Padding="0"
                                                HorizontalScrollBarVisibility="Disabled"
                                                VerticalScrollBarVisibility="Disabled"/>                                    

                                </ScrollViewer>
                                </StackPanel>
                        </Border>
                        <StackPanel
                                    x:Name="DownloadProgressSection"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0"
                                    Opacity="0"
                                    Visibility="Hidden"
                                    ClipToBounds="False">
                            <StackPanel.Resources>
                                <!-- FadeIn Animation -->
                                <Storyboard x:Key="FadeInProgressStoryboard">
                                    <DoubleAnimation Storyboard.TargetName="DownloadProgressSection"
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0" To="1"
                                                    Duration="0:0:0.4" />
                                </Storyboard>
                            </StackPanel.Resources>

                            <!-- Fortschritt Text -->
                            <TextBlock x:Name="ProgressText"
                                    Text="0 MB von 0 MB geladen"
                                    FontSize="14"
                                    Foreground="LightGray"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5"
                                    Visibility="Collapsed"/>

                            <!-- Moderne abgerundete ProgressBar -->
                            <Grid Width="400" Height="25" ClipToBounds="True">
                                <!-- Hintergrund -->
                                <Border x:Name="Progress" Background="#33000000" CornerRadius="12" Height="25"/>

                                <!-- Vordergrund: tatsächlicher Fortschritt -->
                                <Border x:Name="ProgressBar"
                                        Background="{StaticResource ProgressGradient}"
                                        CornerRadius="12"
                                        Width="0"
                                        Height="25"
                                        Visibility="Collapsed"/>

                                <!-- Prozent Text -->
                                <TextBlock x:Name="ProgressPercent"
                                        Text="0%"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"/>
                            </Grid>
                        </StackPanel>
                        </Grid>

                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Grid.Row="3"
                                            Margin="0,5,0,0">
                                    <!-- Double Button Grid -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="btnUpdate"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                FontFamily="Segoe UI Semibold"
                                                Foreground="White"
                                                Margin="0,0,10,0"
                                                
                                                Style="{StaticResource DownloadButtonStyle}"
                                                Visibility="Collapsed"
                                                ClipToBounds="False">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="False">
                                               <!-- <Image Margin="4,4,0,4" Tag="_internal/Assets/Download.png" Source="https://img.icons8.com/fluency/100/double-down.png"
                                                    Width="45" Height="45"  ClipToBounds="False"/>-->
                                                <Image Margin="6,4,0,4" Tag="_internal/Assets/Download.png" Source="https://img.icons8.com/fluency/96/download.png"
                                                    Width="30" Height="30"  ClipToBounds="False"/>
                                                <TextBlock Text="{Binding [Update_Overlay.DownloadBtn], Mode=OneWay}" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold" Margin="4,0,10,0" ClipToBounds="False" />
